// String e Contagem de Caracteres

#include <stdio.h>

int main() {
	int i;
	char Texto[201];
	
	//Input
	printf("Digite um texto qualquer: ");
	gets(Texto);
	
	//Output
	printf("O texto digitado foi: \n");
	printf("%s\n", Texto);
	
	printf("\nOutra forma de apresentar uma string\n");
	puts(Texto);
	
	//Calcular o Tamanho da String
	i = 0;
	while(Texto[i] !='\0')
		i++;
	
	printf("O texto possui %d caracteres (contando espaco)\n", i);
}
