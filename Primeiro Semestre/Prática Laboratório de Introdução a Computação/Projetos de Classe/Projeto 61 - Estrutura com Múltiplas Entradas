void fDados(char n[40], char c[12], int i) {
    printf("\n------------------------------------------------------------------------------------\n");
    printf("Nome: %s\t", n);
    printf("\tCelular: %s\t\t", c);
    printf("Idade: %d anos\t\t", i);
    printf("------------------------------------------------------------------------------------\n");
}

