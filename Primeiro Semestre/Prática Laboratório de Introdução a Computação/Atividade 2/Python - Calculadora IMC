import math

while True:
    Menu = 0

    # MENU
    while Menu != 1 and Menu != 2 and Menu != 3 and Menu != 4:
        print("Escolha sua opção de cálculo:")
        print("1 - IMC\n2 - Peso Ideal\n3 - Altura Ideal\n4 - Sair")
        Menu = int(input())
        if Menu not in [1, 2, 3, 4]:
            print("Erro: Entrada inválida\n")

    # Opção de saída
    if Menu == 4:
        print("Encerrando o programa...")
        break
    else:
        # CALCULADORA IMC
        if Menu == 1:
            print("Você selecionou IMC")
            
            # Input IMC
            Peso = float(input("Digite seu Peso em Kg: "))
            while Peso <= 0:
                print("Erro: Entrada inválida")
                Peso = float(input("Digite seu Peso em Kg: "))
            
            Altura = float(input("Digite sua Altura em Centímetros: "))
            while Altura <= 0:
                print("Erro: Entrada inválida")
                Altura = float(input("Digite sua Altura em Centímetros: "))
            
            # Output
            print("Seu Peso: {:.1f} Kg".format(Peso))
            Altura1 = Altura / 100
            print("Sua Altura: {:.2f} metros".format(Altura1))
            IMC = Peso / (Altura1 * Altura1)
            print("Seu IMC é: {:.1f}".format(IMC))
            
            # Tabela IMC
            print()
            if IMC < 18.5:
                print("Sua classificação é: Peso Baixo")
            elif 18.5 <= IMC <= 24.9:
                print("Sua classificação é: Peso Normal")
            elif 24.9 < IMC <= 29.9:
                print("Sua classificação é: Sobrepeso")
            elif 29.9 < IMC <= 34.9:
                print("Sua classificação é: Obesidade (Grau 1)")
            elif 34.9 < IMC <= 39.9:
                print("Sua classificação é: Obesidade Severa (Grau 2)")
            else:
                print("Sua classificação é: Obesidade Morbida (Grau 3)")
