#include <stdio.h>

int main (){
	float Peso;
	Peso = 0;
	float Altura;
	Altura = 0;
	float Altura1;
	Altura1 = Altura/100;
	float IMC;
	
	
	//Input 
	while  (Peso <= 0){
		printf("Digite seu Peso em Kg: ");
		scanf("%f\Digite seu Peso em Kg: ", &Peso);
		if (Peso <= 0){
			printf("Valor Invalido");
			printf("\n");
			} 
	}
	
	while  (Altura <= 0){
		printf("Digite sua Altura em Cemtimetros: ");
		scanf("%f\Digite sua Altura em Cemtimetros", &Altura);
			printf("Valor Invalido");
			printf("\n");
	}

	//Output
	printf("Seu Peso: %fKg\n", Peso);
	printf("Sua Altura: %fmetros\n", Altura/100);
	printf("Seu IMC: %f\n", Peso/(Altura1*Altura1));
}
