#include <stdio.h>

int main (){
	float Peso;
	Peso = 0;
	float Altura;
	Altura = 0;
	float Altura1;
	float IMC;
	
	
	//Input 
	while  (Peso <= 0){
		printf("Digite seu Peso em Kg: ");
		scanf("%fDigite seu Peso em Kg: ", &Peso);
		if (Peso <= 0){
			printf("Valor Invalido");
			printf("\n");
			} 
	}
	
	while  (Altura <= 0){
		printf("Digite sua Altura em Cemtimetros: ");
		scanf("%fDigite sua Altura em Cemtimetros", &Altura);
			printf("Valor Invalido");
			printf("\n");
	}

	//Output
	printf("Seu Peso: %.1f Kg\n", Peso);
	Altura1 = Altura/100;
	printf("Sua Altura: %.2f metros\n", Altura1);
	IMC = Peso/(Altura1*Altura1);
	printf("Seu IMC: %f\n", IMC);
	
	//Tabela IMC
	printf("\n");
	if (IMC < 18.5){
	    printf("Sua classificação é: Peso Baixo");}
	    else if (IMC >= 18.5 && IMC <= 24.9){
	        printf("Sua classificação é: Peso Normal");}
	    else if (IMC > 24.9 && IMC <= 29.9){
	        printf("Sua classificação é: Sobrepeso");}
	    else if (IMC > 29.9 && IMC <= 34.9){
	        printf("Sua classificação é: Obesidade (Grau 1)");}
	    else if (IMC > 34.9 && IMC <= 39.9){
	        printf("Sua classificação é: Obesidade Severa (Grau 2");}
	    else {
	        printf("Sua classificação é: Obesidade Morbida (Grau 3");
	    }
	    
	}
