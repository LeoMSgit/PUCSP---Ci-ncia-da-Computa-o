#include <stdio.h>

int main (){
	float Peso;
	Peso = 0;
	float Altura;
	Altura = 0;
	float IMC;
	IMC = ("%f\n", Peso/Altura*Altura);
	
	
	//Input 
	while  (Peso <= 0){
		printf("Digite seu Peso em Kg: ");
		scanf("%f\Digite seu Peso em Kg: ", &Peso);
		if (Peso <= 0){
			printf("Valor Invalido");
			printf("");
			printf("");
			printf("");
			} 
	}
	
	while  (Altura <= 0){
		printf("Digite sua Altura em Cemtimetros: ");
	scanf("%f\Digite sua Altura em Cemtimetros", &Altura/10);
		if (Peso <= 0){
			printf("Valor Invalido");
			printf("");
			printf("");
			printf("");
			} 
	}
	

	//Output
	printf("Seu Peso: %f\n", Peso);
	printf("Sua Altura: %f\n", Altura);
	printf("Seu IMC: %f\n", Peso/(Altura*Altura));
}
